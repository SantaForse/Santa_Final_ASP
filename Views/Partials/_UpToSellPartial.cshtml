@*Up-to-sell Partial*@

@model ProductsViewModel

<section class="up-to-sell ">
    <div class="container">
        <div class="collection-grid">
            <div class="item-1">
                <!-- collection-item start -->
                @{
                    if (Model.Products.Where(x => x.ProductTag == "Flash").Any())
                    {
                        <a href="@Url.Action("Index", "OneProduct", new {id = Model.Products.Where(x => x.ProductTag == "Flash").First().Id})" class="collection-item">
                            <img style="height:310px; width:370px;" src="@Model.Products.Where(x => x.ProductTag == "Flash").First().ImgUrl" alt="@Model.Products.Where(x => x.ProductTag == "Flash").First().Name">
                            <div class="body">
                                <div class="title">@Model.Products.Where(x => x.ProductTag == "Flash").First().Name</div>
                                <div class="info">
                                    <div class="price">$@Model.Products.Where(x => x.ProductTag == "Flash").First().Price</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>
                    }
                    else
                    {
                        
                    }
                }
                <!-- collection-item end -->
            </div>
            <div class="discover">
                <!-- collection-content start -->
                <div class="collection-content">
                    <div class="container">
                        <div class="title-red">UP TO SELL</div>
                        <div class="title">50% OFF</div>
                        <div class="ingress">Get the Best Price</div>
                        <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                        <a href="#" class="link">Discover More</a>
                    </div>
                </div>
                <!-- collection-content end -->
            </div>
            <div class="item-2">
                <!-- collection-item start -->
                @{
                    if (Model.Products.Where(x => x.ProductTag == "Flash").Any())
                    {
                        <a href="@Url.Action("Index", "OneProduct", new {id = Model.Products.Where(x => x.ProductTag == "Flash").Last().Id})" class="collection-item">
                            <img style="height:310px; width:370px;" src="@Model.Products.Where(x => x.ProductTag == "Flash").Last().ImgUrl" alt="@Model.Products.Where(x => x.ProductTag == "Flash").Last().Name">
                            <div class="body">
                                <div class="title">@Model.Products.Where(x => x.ProductTag == "Flash").Last().Name</div>
                                <div class="info">
                                    <div class="price">$@Model.Products.Where(x => x.ProductTag == "Flash").Last().Price</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>

                    }
                    else
                    {

                    }
                }
                <!-- collection-item end -->
            </div>
        </div>
    </div>
</section>