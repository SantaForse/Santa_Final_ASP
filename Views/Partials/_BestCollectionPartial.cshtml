@*Best-Collection Partial *@

@model ProductsViewModel


<section class="best-collection ">
    <div class="container">
        <h1 class="collection-title">Best Collection</h1>
        <ul class="categories">
            <li class="category-item">All</li>
            <li class="category-item">Bag</li>
            <li class="category-item">Dress</li>
            <li class="category-item">Decoration</li>
            <li class="category-item">Essentials</li>
            <li class="category-item">Interior</li>
            <li class="category-item">Laptop</li>
            <li class="category-item">Mobile</li>
            <li class="category-item">Beaty</li>
        </ul>
        <div class="collection-grid">

            @*Stops the foreach loop at 8 products*@
            @{
                var counter = 0;
            }

            @*Loops out a number of products from list*@
            @foreach (var product in Model.Products)
            {
                @*Filters products to tag "best"*@
                if (product.ProductTag == "Best")
                {
                    counter++;
                    if (counter == 9)
                    {
                        break;
                    }
                    else
                    {
                        //<a href="@Url.Action("Product", "YourControllerName", new { id = product.Id })">@product.Name</a>
                        <a href="@Url.Action("Index", "OneProduct", new {id = product.Id})" class="collection-item">
                            <img style="height:295px;" src="@product.ImgUrl" alt="@product.Name">
                            <div class="body">
                                <div class="title">@product.Name</div>
                                <div class="info">
                                    <div class="price">$@product.Price</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>
                    }
                }
            }

        </div>
        <div class="load-more">
            <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
        </div>
    </div>
</section>