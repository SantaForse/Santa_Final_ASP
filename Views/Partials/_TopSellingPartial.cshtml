@model ProductsViewModel

<section class="top-selling">
    <div class="container-fluid">
        <h1 class="collection-title">Top selling products in this week</h1>
        <div class="collection-grid">

            @*Stops the foreach loop at 6 products*@
            @{
                var counter = 0;
            }

            @*Loops out a number of products from list*@
            @foreach (var product in Model.Products)
            {
                @*Filters products to tag "best"*@
                if (product.ProductTag == "Top")
                {
                    counter++;
                    if (counter == 7)
                    {
                        break;
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "SingleProduct", new {id = product.Id})" class="collection-item">
                            <img style="height:295px;" src="@product.ImgUrl" alt="@product.Name">
                            <div class="body">
                                <div class="title">@product.Name</div>
                                <div class="info">
                                    <div class="price">$@product.Price</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>
                    }
                }
            }

        </div>
        <div class="load-more">
            <button class="btn-outline-white me-1"><i class="fa-solid fa-chevron-left"></i></button>
            <button class="btn-outline-white ms-1"><i class="fa-solid fa-chevron-right"></i></button>
        </div>
        <div class="collection-flex">

            @*Stops the foreach loop at 3 products*@
            @{
                var counter2 = 0;
            }

            @*Loops out a number of products from list*@
            @foreach (var product in Model.Products)
            {
                @*Filters products to tag "best"*@
                if (product.ProductTag == "Featured")
                {
                    counter2++;
                    if (counter2 == 4)
                    {
                        break;
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "SingleProduct", new {id = product.Id})" class="collection-item">
                            <img style="height:310px; width:370px;" src="@product.ImgUrl" alt="@product.Name">
                            <div class="body">
                                <div class="title">@product.Name</div>
                                <div class="info">
                                    <p class="description">
                                        @product.Description
                                    </p>
                                    <p class="posted-by">Post by: Admin <span class="info-comments">Comments 13</span></p>
                                    <div class="price">$ @product.Price</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>
                    }
                }
            }


        </div>
    </div>
</section>